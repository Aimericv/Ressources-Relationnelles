{% extends 'base.html.twig' %}

{% block body %}
    {% block stylesheets %}
        <link rel="stylesheet" href={{ asset('css/versionForm.css') }}>
    {%  endblock %}
    {% if action == "version" %}
    <main>
        <section>
            <form action="{{path('app_dashboard_add_version_add', {'action': 'version'})}}" method="post">
                <div>
                    <label for="name">Nom de la version</label>
                    <input type="text" id="name" name="name" placeholder="1.0.1">
                </div>
                <button type="submit">Créer la version</button>
            </form>
        </section>
    </main>
    {% elseif action == "modification" %}
    <main>
        <section>
            <form action="{{path('app_dashboard_add_version_add', {'action': 'modification'})}}" method="post">
                <div>
                    <label>Verison associé</label>
                    <select name="version">
                        {% for version in versions %}
                            <option value="{{version.getId()}}">{{ version.getName() }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label for="title">Titre</label>
                    <input type="text" id="title" name="title">
                </div>
                <div>
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description">
                </div>
                <button type="submit">Ajouter une modification</button>
            </form>
        </section>
    </main>
    {% endif %}
{% endblock %}