    <title>Ressources Relationnelles</title>
    <style>
        .footer{
            position: fixed;
            bottom: 0px;
            width: 100%;
        }
        body{
            position: relative;
            min-height: 100vh;
        }
        main {
            padding-top: 90px;
            padding-bottom: 100px;
        }
        .hidden {
            display: none;
        }
        @media (min-width: 768px){
            .footer{
                position: static;
            }
        }
        p {
            font-size: {{ utilisateur.police is defined ? utilisateur.police ~ 'px' : '16px' }};
        }
    </style>
